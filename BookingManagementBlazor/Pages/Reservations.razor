@page "/reservations"
@using BookingManagementBlazor.Models.Reservation;
@using BookingManagementBlazor.Services.Reservation;
@inject NavigationManager NavigationManager
@inject IReservationService IReserService

<PageTitle>Reservations</PageTitle>

<h1>Reservation List API</h1>

<button type="button" class="btn btn-success" @onclick="@CreateReservationNavigate">Create Reservation</button>



<table class="table table-striped table-bordered bg-light">
    <thead>
        <tr>
            <th>Id</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>IdRoom</th>
        </tr>
    </thead>
    <tbody>

        @if (ReservatiuonResponse.Reservations == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            @foreach (var reservation in reservationsList)
            {
                @foreach (var reservationElement in reservation.Reservations)
                {    <tr>
                        <td>@reservationElement.Id</td>
                        <td>@reservationElement.StartDate</td>
                        <td>@reservationElement.EndDate</td>
                        <td>@reservationElement.RoomId</td>
                     </tr>
                }
            }
        }
    </tbody>
</table>


@code {
    public ReservationsVm ReservatiuonResponse = new ReservationsVm();
    public List<ReservationsVm> reservationsList = new List<ReservationsVm>();

    protected override async Task OnInitializedAsync()
    {
        await GetReservations();
    }
    private async Task GetReservations()
    {
        ReservatiuonResponse = await IReserService.GetReservationsBookingAPI();
        reservationsList.Add(ReservatiuonResponse);
    }

    private void CreateReservationNavigate()
    {
        NavigationManager.NavigateTo("/createReservation");
    }
    
}